    {
      "expected": 0,
      "name": "Unter Minimum",
      "description": "clamp(-5, 0, 10) = 0",
      "arguments": [-5, 0, 10]
    },
    {
      "expected": 10,
      "name": "Ueber Maximum",
      "description": "clamp(15, 0, 10) = 10",
      "arguments": [15, 0, 10]

    {
      "expected": 50,
      "name": "Am Minimum",
      "description": "clamp(50, 50, 100) = 50",
      "arguments": [50, 50, 100]
    },
    {
      "expected": 100,
      "name": "Am Maximum",
      "description": "clamp(100, 50, 100) = 100",
